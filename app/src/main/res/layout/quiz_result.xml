<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:weightSum="10">


    <TextView
        android:id="@+id/finalResultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Final Results:"
        android:layout_marginBottom="20dp"
        android:textSize="40sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/finalScoreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score: x"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/correctQuestionAnswersTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You answered x/x questions correct!"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnQuitQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:layout_marginRight="10dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="Main Menu"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnRestartQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:layout_gravity="right"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:text="Restart Quiz"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>